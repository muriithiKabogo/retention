<body>
<!-- Preloader -->
<div class="preloader">
  <div class="cssload-speeding-wheel"></div>
</div>
<section id="wrapper" class="new-login-register">
      <div class="lg-info-panel">
              <div class="inner-panel">
                  <a href="javascript:void(0)" class="p-20 di"></a>
                  <div class="lg-content">
                      <h2>TAKE CONTROL OF YOUR CHURN TODAY</h2>
                      <p class="text-muted">Nestmetricâ€™s AI monitors the behaviour of your customers and sends you real-time alerts when they are likely to buy or stop using your product. </p>
                      
                  </div>
              </div>
      </div>
      <div class="new-login-box">
                <div class="white-box">
                    <h3 class="box-title m-b-0">Sign In to Admin</h3>
  
                    <small>Enter your details below</small>
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html=> { class: 'form-horizontal new-lg-form',id: 'loginform',:"rakam-event-form" => 'Account registrations'}) do |f| %>
                    <%if devise_error_messages!%>
                      <div class="alert alert-warning" role="alert">
                        <%= devise_error_messages!%>
                      </div>
                    <%end%>
                      <% if flash[:alert] %>
                        <div class="alert alert-warning" role="alert">
                            <%= flash[:alert] %>
                        </div>
                      <%elsif flash[:notice]%>
                        <div class="alert alert-success" role="alert">
                            <%= flash[:notice] %>
                        </div>
                      <%elsif flash[:error]%>
                         <div class="alert alert-danger" role="alert">
                            <%= flash[:error] %>
                        </div>      
                      <%end%>
                    <div class="form-group ">
                        <div class="col-xs-12">
                       
                            <%= f.email_field :email, autofocus: true, class: "form-control",placeholder: 'Email' %>
                            </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                     
                            <%= f.password_field :password, autocomplete: "off",class: 'form-control', placeholder: 'Password'%>
                            </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <%= f.password_field :password_confirmation, autocomplete: "off" ,class: 'form-control',placeholder:'Confirm Password'%>
                            </div>
                    </div>
                    
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <%= f.submit "Sign up",class: 'actions btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light' %>
                        </div>
                    </div>
                    <%end%>
                    <div class="row">
                      <div class="col-xs-12 col-sm-12 col-md-12 m-t-10 text-center">
                        <div class="social"><a href="javascript:void(0)" class="btn  btn-facebook" data-toggle="tooltip"  title="Login with Facebook"> <i aria-hidden="true" class="fa fa-facebook"></i> </a> <a href="javascript:void(0)" class="btn btn-googleplus" data-toggle="tooltip"  title="Login with Google"> <i aria-hidden="true" class="fa fa-google-plus"></i> </a> </div>
                      </div>
                    </div>
                </div>
      </div>            
  

</body>

