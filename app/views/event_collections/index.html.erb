<%= render 'layouts/header' %>
<div id="wrapper">
	<%= render 'layouts/navbar' %>
	<div id="page-wrapper">
	    <div class="container-fluid">
	        <div class="row bg-title">
	 
	            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
					 <h4 class="page-title">All Events Being Tracked</h4>
	            </div>
	            
			</div>
			<% if flash[:notice] && @user.sign_in_count>1%>
                    <div class="alert alert-success" role="alert">
                        <%= flash[:notice] %>
                    </div>
            <%end%>
			 <div class="row">
	            <div class="col-lg-12 col-sm-12 col-xs-12">
	              <div class="white-box">
		            	<div class="table-responsive">
	                                <table class="table">
	                                    <thead>
	                                        <tr >
	                                            <th style="color: black;"> Event</th>
	                                            <th style="color: black;"> Total count</th>    
	                                        </tr>
	                                    </thead>
	                                    <tbody>
	                                    
	                                     <%@events.each do |event|%>
	                                        <tr>
												<td><%= button_to @events[@events.index(event)][0],dashboard_most_valuable_path,:method=>'post',params: {projectName: "#{@events[@events.index(event)][0]}"}%></td>
	                                            
	                                            <td><span class="text-muted"><%=@events[@events.index(event)][1]%></span></td>         
	                                        </tr> 
										<%end%> 
	                                    </tbody>
	                                </table>
	                      	</div>
	                     </div>
		            </div>
	        </div>

		</div>
	</div>
</div>
